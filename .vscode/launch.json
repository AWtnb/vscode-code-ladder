// https://zenn.dev/senken/articles/vsce-tips-2024
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--disable-extensions", "--extensionDevelopmentPath=${workspaceFolder}", "--folder-uri=file:///${env:USERPROFILE}/Desktop/dev"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "${defaultBuildTask}",
      "skipFiles": ["**/app/out/vs/**"]
    }
  ]
}

